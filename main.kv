#:kivy 2.1.0

Main:

<Main>: 
    Stop:
    Wasd:
        size_hint: None, None
        size: root.size
        pos_hint: None, None
        pos: "20dp" , "20dp"
        padding: ("20dp", "20dp", "20dp" ,"20dp")
    Updown:
        size_hint: None, None
        size: root.size
        pos_hint: None, None
        pos: "800dp" , "20dp"
        padding: ("20dp", "20dp", "20dp" ,"20dp")
    FunctionsDropdown:
        anchor_x: "right"
        anchor_y: "top"
        padding: ("20dp", "20dp", "20dp" ,"20dp")
    AnchorLayout:
        anchor_x: "left"
        anchor_y: "bottom"
        Console:
            id: console
            size_hint: (1,0.5)
            valign: "top"
            halign: "left"
            text_size: self.size
            text: self.content
            # color: (0,0,0,1)
            # canvas.before:
            #     Color:
            #         rgba: (255,255,255,1)
            #     Rectangle:
            #         size: self.size
            #         pos: self.pos
<Stop>:
    anchor_x: "left"
    anchor_y: "top"
    padding: ("20dp", "20dp", "20dp" ,"20dp")
    RoundedButton:
        background_color: (0,0,0,0)
        background_normal: ''
        size_hint: None, None
        size: "60dp","60dp"
        text: "STOP"
        on_press: 
            self.emergency()
            app.root.append("STOP")

<RoundedButton@Button>:
    canvas.before: 
        Color: 
            rgba: self.normal if self.state=="normal" else self.down
            # rgba: (1, .2, .2, 1)
        RoundedRectangle:
            radius: [1000]
            pos: self.pos
            size : self.size

<dropdown>:
    orientation: "vertical"
    Button:
        text: "Motion Control"
        id: motion_control
        size_hint:None, None
        size: "120dp", "44dp"
        on_press: root.toggle_acc()
    Button:
        text: "Sync"
        size_hint:None, None
        size: "120dp", "44dp"
        on_press: root.sync()
    Button:
        text: "Voice Control"
        id: start_button
        size_hint:None, None
        size: "120dp", "44dp"
        on_press: root.listen()
    Button:
        text: "Take Off"
        size_hint:None, None
        size: "120dp", "44dp"
        on_press: 
            root.send("takeoff")
            app.root.append("takeoff")
    Button:
        text: "Land"
        size_hint:None, None
        size: "120dp", "44dp"
        on_press: 
            root.send("land")
            app.root.append("land")
    Button:
        text: "State"
        size_hint:None, None
        size: "120dp", "44dp"
        on_press: 
            app.root.append("state")
         
